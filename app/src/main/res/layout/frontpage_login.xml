<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="activities.activity_login">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="45dp"
            android:fontFamily="@font/inter"
            android:text="@string/login_title"
            android:textColor="@color/white"
            android:textSize="11sp"
            android:textAlignment="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter"
            android:text="@string/login_signup_email"
            android:textColor="@color/saffron"
            android:textSize="11sp"
            android:gravity="center_vertical"
            android:paddingBottom="2dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter"
            android:hint="@string/login_signup_email_hint"
            android:textColorHint="@color/battleship_grey"
            android:textColor="@color/battleship_grey"
            android:textSize="11sp"
            android:gravity="fill_vertical"
            android:paddingTop="11dp"
            android:background="@drawable/saffron_underline"
            android:inputType="textEmailAddress"
            android:id="@+id/email_input"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter"
            android:text="@string/login_signup_password"
            android:textColor="@color/saffron"
            android:textSize="11sp"
            android:gravity="center_vertical"
            android:paddingTop="20dp"
            android:paddingBottom="2dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter"
            android:hint="@string/login_signup_password_hint"
            android:textColorHint="@color/battleship_grey"
            android:textColor="@color/battleship_grey"
            android:textSize="11sp"
            android:gravity="fill_vertical"
            android:paddingTop="11dp"
            android:background="@drawable/saffron_underline"
            android:inputType="textPassword"
            android:id="@+id/password_input"/>

        <Button
            style="@android:style/Widget.Button"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/btn_saffron_outline"
            android:fontFamily="@font/inter"
            android:text="@string/login_btn_message"
            android:textColor="@color/white"
            app:strokeWidth="1dp"
            android:id="@+id/login_btn"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="60dp"
            android:fontFamily="@font/inter"
            android:text="@string/login_signup_message"
            android:textColor="@color/battleship_grey"
            android:textSize="11sp"
            android:textAlignment="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:fontFamily="@font/inter"
            android:text="@string/login_signup_link_clickable"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textAlignment="center"
            android:clickable="true"
            android:id="@+id/login_signup_link"/>
    </LinearLayout>
</RelativeLayout>
