<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/btn_saffron_outline_rounded_24"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/dialog_change_ticket_status_textview"
        android:fontFamily="@font/inter"
        android:textColor="@color/saffron"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cambio de estado"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:padding="8dp"/>

    <Button
        android:id="@+id/employee_ticket_status_open_selection_btn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_ticket_status_open"
        android:fontFamily="@font/inter"
        android:textColor="@color/white"
        android:layout_margin="10dp"
        app:strokeWidth="1dp"
        android:text="Abierto"
        android:textAllCaps="false"
        android:visibility="gone"/>

    <Button
        android:id="@+id/employee_ticket_status_in_progress_selection_btn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_ticket_status_in_progress"
        android:fontFamily="@font/inter"
        android:textColor="@color/white"
        android:layout_margin="10dp"
        app:strokeWidth="1dp"
        android:text="En progreso"
        android:textAllCaps="false"
        android:visibility="gone"/>

    <Button
        android:id="@+id/employee_ticket_status_pending_selection_btn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_ticket_status_pending"
        android:fontFamily="@font/inter"
        android:textColor="@color/white"
        android:layout_margin="10dp"
        app:strokeWidth="1dp"
        android:text="Estancado"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/employee_ticket_status_resolved_selection_btn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_ticket_status_resolved"
        android:fontFamily="@font/inter"
        android:textColor="@color/white"
        android:layout_margin="10dp"
        app:strokeWidth="1dp"
        android:text="Resuelto"
        android:textAllCaps="false"/>
</LinearLayout>
