<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="140dp"
    android:layout_margin="6dp"
    android:elevation="4dp"
    android:background="@drawable/ticket_open_container"
    android:padding="10dp">

    <TextView
        android:id="@+id/recently_updated_ticket_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="Ticket Title"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/recently_updated_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/recently_updated_ticket_title"
        android:text="Status changed"
        android:textColor="@color/battleship_grey"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/recently_updated_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/recently_updated_message"
        android:text="5 mins ago"
        android:textColor="@color/battleship_grey"
        android:textSize="10sp"/>

</RelativeLayout>