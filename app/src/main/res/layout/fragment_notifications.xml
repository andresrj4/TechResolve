<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="activities.Notifications">

    <TextView
        android:id="@+id/notifications_fragment_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notificaciones"
        android:textAppearance="@font/inter"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:elevation="4dp"
        android:layout_marginStart="15dp"
        android:textStyle="bold"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/notifications_recycler_viewer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/notifications_fragment_title"/>

</LinearLayout>