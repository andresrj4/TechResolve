<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/ticket_bg_open"
    android:padding="20dp"
    tools:context="activities.EmployeeTicketDetails">

    <LinearLayout
        android:id="@+id/employee_ticket_details_header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/employee_ticket_details_ticketID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:layout_weight="1"
            android:text="Ticket ID"
            android:textColor="@color/french_gray"
            android:fontFamily="@font/inter"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/employee_ticket_details_ticket_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:text="Estado"
            android:fontFamily="@font/inter"
            android:textColor="#FF0000"
            android:layout_alignParentEnd="true"/>
    </LinearLayout>

    <TextView
        android:id="@+id/employee_ticket_details_ticket_title"
        android:layout_below="@id/employee_ticket_details_header_layout"
        android:paddingTop="10dp"
        android:fontFamily="@font/inter"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Titulo"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/employee_ticket_details_ticket_description"
        android:layout_below="@id/employee_ticket_details_ticket_title"
        android:paddingTop="10dp"
        android:fontFamily="@font/inter"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DescripciÃ³n"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/employee_ticket_details_client_assigned"
        android:layout_below="@id/employee_ticket_details_ticket_description"
        android:paddingTop="20dp"
        android:fontFamily="@font/inter"
        android:textColor="@color/french_gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cliente"
        android:textSize="18sp" />

    <Button
        android:id="@+id/employee_ticket_claim_btn"
        android:layout_below="@id/employee_ticket_details_client_assigned"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:background="@drawable/btn_saffron_outline_2"
        android:fontFamily="@font/inter"
        android:clickable="true"
        android:text="Tomar Ticket"
        android:textAllCaps="false"
        android:visibility="visible"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="8dp">

        <Button
            android:id="@+id/employee_ticket_details_materials_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:textColor="@color/white"
            android:background="@drawable/btn_saffron_outline_2"
            android:fontFamily="@font/inter"
            android:clickable="true"
            android:text="Materiales"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/employee_ticket_details_history_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:textColor="@color/white"
            android:background="@drawable/btn_saffron_outline_2"
            android:fontFamily="@font/inter"
            android:clickable="true"
            android:text="Historial"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/employee_ticket_details_notes_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:textColor="@color/white"
            android:background="@drawable/btn_saffron_outline_2"
            android:fontFamily="@font/inter"
            android:clickable="true"
            android:text="Notas"
            android:textAllCaps="false" />
        <Button
            android:id="@+id/employee_ticket_change_status_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:background="@drawable/btn_saffron_outline_2"
            android:fontFamily="@font/inter"
            android:clickable="true"
            android:text="Cambiar Estado"
            android:textAllCaps="false" />
    </LinearLayout>
</RelativeLayout>