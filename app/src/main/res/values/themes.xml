<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SistemadeTickets" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Customize your light theme here. -->
    </style>
    <style name="Theme.SistemadeTickets" parent="Base.Theme.SistemadeTickets" />

    <style name="BottomNavTextAppearance">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/french_gray</item>
    </style>

    <style name="DialogAnimationBottomToCenter">
        <item name="android:windowEnterAnimation">@anim/slide_in_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_to_bottom</item>
    </style>

    <!-- Custom Dialog Style -->
    <style name="DialogAnimationFadeIn" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:background">@drawable/btn_saffron_outline</item> <!-- Custom drawable for background with rounded corners -->
        <item name="android:windowBackground">@android:color/transparent</item> <!-- Make the dialog window background transparent -->
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>
</resources>
